<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="layout_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- actionbar -->
    <style name="actionbar_title" parent="layout_ww">
        <item name="android:maxLength">10</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="actionbar_icon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="actionbar_save" parent="layout_ww">
        <item name="android:maxLength">10</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <!--camera dialog 样式-->
    <style name="dialog_camera_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_order_item_unradian</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/order_text_font_h_color_333333</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>